<Window x:Class="WeatherJournalWPF.readWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherJournalWPF"
        mc:Ignorable="d"
        Title="readWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите дату, о которой нужна информация:" HorizontalAlignment="Left" Margin="182,67,0,0" VerticalAlignment="Top" Width="366"/>
        <TextBox x:Name="txtDateForCheck" HorizontalAlignment="Left" Margin="182,114,0,0" TextWrapping="Wrap" Text="dd.mm.yyyy" VerticalAlignment="Top" Width="241" Height="26"/>
        <Button x:Name="btnDateConfirm" Content="Выбрать" HorizontalAlignment="Left" Margin="182,159,0,0" VerticalAlignment="Top" Height="33" Width="100" Click="btnDateConfirm_Click"/>

    </Grid>
</Window>
